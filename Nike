<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>나이키 매장 검색</title>
    <style>
        body {
            text-align: center;
            font-size: 1.2rem;
            margin-top: 5%;
            font-family: 'Arial', sans-serif;
        }
        input, button {
            font-size: 1rem;
            padding: 10px;
            margin: 10px;
        }
        button {
            cursor: pointer;
        }
        #results {
            margin-top: 20px;
            text-align: left;
            display: inline-block;
        }
        .store {
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
        }
    </style>
</head>
<body>
    <h1>나이키 매장 검색기</h1>
    <p>도시명을 입력하세요 (예: 서울)</p>
    <input type="text" id="locationInput" placeholder="예: 서울">
    <button onclick="searchNikeStores()">검색</button>

    <div id="results"></div>

    <script>
        function searchNikeStores() {
            const location = document.getElementById("locationInput").value.trim();
            const resultsDiv = document.getElementById("results");

            if (location !== "서울") {
                resultsDiv.innerHTML = "<p>해당 지역의 매장을 찾을 수 없습니다.</p>";
                return;
            }

            const stores = [
                {
                    name: "나이키 강남 플래그십 스토어",
                    address: "서울 강남구 강남대로 396",
                    hours: "10:30 ~ 21:30"
                },
                {
                    name: "나이키 명동점",
                    address: "서울 중구 명동8길 25",
                    hours: "11:00 ~ 21:00"
                },
                {
                    name: "나이키 타임스퀘어점",
                    address: "서울 영등포구 영중로 15",
                    hours: "10:30 ~ 22:00"
                },
                {
                    name: "나이키 롯데월드몰점",
                    address: "서울 송파구 올림픽로 300",
                    hours: "10:30 ~ 22:00"
                },
                {
                    name: "나이키 홍대점",
                    address: "서울 마포구 와우산로 70",
                    hours: "11:00 ~ 21:30"
                }
            ];

            let resultText = "<h2>서울의 나이키 매장</h2>";
            stores.forEach(store => {
                resultText += `
                    <div class="store">
                        <strong>${store.name}</strong><br>
                        위치: ${store.address}<br>
                        영업시간: ${store.hours}
                    </div>
                `;
            });

            resultsDiv.innerHTML = resultText;
        }
    </script>
</body>
</html>
